---
const { rolls } = Astro.props;

console.log(rolls.title);

---

<section class="menu py-28 px-5" id="menu">
    <div class="container mx-auto">
        <h2 class="text-center mb-5">Men√∫</h2>
        <div class="grid grid-cols-1 gap-8 lg:grid-cols-4">
            {
                rolls.map(roll => (
                    <article class="py-2">
                        <div class="flex justify-between items-end border-bottom">
                            <h4>{roll.title}</h4>
                            <span>{roll.price}</span>
                        </div>
                        <div class="flex justify-between items-center mt-5">
                            <p class="pr-5">{roll.description}</p>
                            <img src={roll.img} alt="California Roll">
                        </div>
                        <p class="text-first-color">{roll.units}</p>
                    </article>
                ))
            }
        </div>
    </div>
</section>

<style>
    h2 {
        font-size: 40px;
        line-height: 43px;
        font-weight: 800;
        position: relative;
        z-index: 1;
    }

    h2::before {
        content: 'Nuestro';
        position: absolute;
        top: -10px;
        left: 50%;
        transform: translate(-50%);
        font-size: 80px;
        font-weight: 800;
        color: #F3B700;
        z-index: -1;
    }

    .border-bottom {
        border-bottom: 1px solid #F3B700;
    }

    h4 {
        font-size: 20px;
    }

    span {
        font-size: 20px;
        font-weight: 800;
    }

    img {
        width: 100px;
    }

    p {
        font-size: 18px;
        line-height: 21px;
        color: black;
    }

</style>