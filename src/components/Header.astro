---
const { links } = Astro.props;
---

<header class="px-5 py-5 md:py-10 fixed top-0 w-full">
    <nav class="container mx-auto">
        <div class="flex justify-between">
            <h2>Comidit<span>app</span></h2>
            <div>
                <input type="checkbox" id="checkbox">
                <label for="checkbox" class="checkbox-label">
                    <span class="span1"></span>
                    <span class="span2"></span>
                    <span class="span3"></span>
                </label>
                <ul class="menu-container">
                    {
                        links.map((link: { url: string; title: string; }) => (
                            <li><a href={link.url}>{link.title}</a></li>
                        ))
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<style>
    header {
        background-color: #000000;
        z-index: 3;
    }

    .checkbox-label {
        width: 50px;
        height: 30px;
        position: relative;
        cursor: pointer;
        z-index: 1;
    }

    .span1, .span2, .span3 {
        position: absolute;
        right: 0;
        content: '';
        height: 4px;
        width: 40px;
        background-color: #FAFAFA;
        border-radius: 5px;
        transition: all 400ms ease;
    }

    .span2 {
        top: 12px;
        width: 25px;
    }

    .span3 {
        top: 24px;
    }

    #checkbox {
        display: none;
    }

    #checkbox:checked ~ .checkbox-label .span1 {
        transform: rotate(40deg);
        top: 10px;
    }

    #checkbox:checked ~ .checkbox-label .span2 {
        opacity: 0;
    }

    #checkbox:checked ~ .checkbox-label .span3 {
        transform: rotate(-40deg);
        top: 10px;
    }

    .menu-container {
        width: 100%;
        height: 100vh;
        position: absolute;
        top: 0;
        right: 0;
        color: #FAFAFA;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-left: 40px;
        background-color: #000000;
        transform: translateX(100%);
        transition: all 0.5s ease;
    }

    .menu-container li {
        position: relative;
        font-size: 30px;
        margin-bottom: 20px;
        font-weight: 800;
    }

    .menu-container li a::after {
        content: '';
        background-color: #F3B700;
        width: 0px;
        height: 4px;
        position: absolute;
        left: 0;
        bottom: -10px;
        border-bottom-right-radius: 50px;
        border-top-right-radius: 50px;
        transition: all 0.2s ease;
    }

    .menu-container li a:hover::after {
        width: 30px;
    }

    #checkbox:checked ~ .menu-container {
        transform: translateX(20%);
    }

    h2 {
        font-size: 20px;
        font-weight: 800;
        color: #FAFAFA;
    }

    span {
        color: #57A83B;
    }

    @media screen and (min-width: 1200px) {
        .checkbox-label {
            display: none;
        }

        .menu-container {
            height: inherit;
            transform: inherit;
            position: inherit;
            flex-direction: row;
            background-color: transparent;
        }

        .menu-container li {
            padding: 0 80px 0 0;
            font-size: 20px;
            font-weight: 400;
            text-transform: capitalize;
            margin-bottom: 0;
        }
    }

</style>